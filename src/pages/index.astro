---
import Layout from "../layouts/Layout.astro";
import BackgroundBlobs from "../components/BackgroundBlobs.astro";
import HomeSection from "../components/HomeSection.astro";
import AboutSection from "../components/AboutSection.astro";
import ProjectsSection from "../components/ProjectsSection.astro";
import FormationSection from "../components/FormationSection.astro";
import ContactSection from "../components/ContactSection.astro";
import { l_projects } from "../data/projects";
---

<Layout title="Portfolio | Tristan Delthil">
  <BackgroundBlobs />
  <HomeSection />
  <AboutSection />
  <ProjectsSection l_projects={l_projects} />
  <FormationSection />
  <ContactSection />
</Layout>

<style>
  .section {
    min-height: 100vh;
    padding: 6rem 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .section h2 {
    font-size: 3rem;
    font-weight: 700;
    letter-spacing: -0.03em;
    color: #1d1d1f;
  }

  :global([data-theme="dark"]) .section h2 {
    color: #f5f5f7;
  }
</style>
