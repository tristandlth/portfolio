---
import { l_navLinks } from "../data/navigation";
---

<header class="header">
  <nav class="header__nav">
    <!-- Menu burger (mobile uniquement) -->
    <button
      type="button"
      class="burger-toggle"
      id="burger-toggle"
      aria-label="Toggle menu"
      aria-expanded="false"
    >
      <span class="burger-toggle__line"></span>
      <span class="burger-toggle__line"></span>
      <span class="burger-toggle__line"></span>
    </button>

    <!-- Navigation links -->
    <div class="header__links" id="nav-links">
      {
        l_navLinks.map((link) => (
          <a href={link.href} class="header__link">
            {link.label}
          </a>
        ))
      }
    </div>

    <span class="header__separator" aria-hidden="true"></span>

    <!-- Theme toggle -->
    <button
      type="button"
      class="theme-toggle"
      id="theme-toggle"
      aria-label="Changer le thème"
      title="Changer le thème"
    >
      <svg
        class="theme-toggle__icon theme-toggle__icon--sun"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        aria-hidden="true"
      >
        <circle cx="12" cy="12" r="5"></circle>
        <line x1="12" y1="1" x2="12" y2="3"></line>
        <line x1="12" y1="21" x2="12" y2="23"></line>
      </svg>

      <svg
        class="theme-toggle__icon theme-toggle__icon--moon"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        aria-hidden="true"
      >
        <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
      </svg>
    </button>
  </nav>
</header>

<script>
  /**
   * Gestionnaire du thème clair/sombre
   */
  class ThemeManager {
    private readonly STORAGE_KEY = "theme";

    constructor() {
      this.bindEvents();
    }

    /**
     * Lie les événements pour le toggle de thème
     */
    private bindEvents(): void {
      document
        .getElementById("theme-toggle")
        ?.addEventListener("click", () => this.toggle());

      window
        .matchMedia("(prefers-color-scheme: dark)")
        .addEventListener("change", (e) => {
          if (!localStorage.getItem(this.STORAGE_KEY)) {
            this.setTheme(e.matches ? "dark" : "light");
          }
        });
    }

    /**
     * Définit le thème actif
     * @param theme - Le thème à appliquer
     */
    private setTheme(theme: "light" | "dark"): void {
      const o_root = document.documentElement;
      o_root.classList.remove("light", "dark");
      o_root.classList.add(theme);
      o_root.setAttribute("data-theme", theme);
    }

    /**
     * Bascule entre les thèmes clair et sombre
     */
    private toggle(): void {
      const isDark = document.documentElement.classList.contains("dark");
      const newTheme = isDark ? "light" : "dark";
      this.setTheme(newTheme);
      localStorage.setItem(this.STORAGE_KEY, newTheme);
    }
  }

  /**
   * Gestionnaire du menu burger mobile
   */
  class BurgerMenuManager {
    private o_burgerButton: HTMLElement | null;
    private o_navLinks: HTMLElement | null;
    private isOpen: boolean = false;

    constructor() {
      this.o_burgerButton = document.getElementById("burger-toggle");
      this.o_navLinks = document.getElementById("nav-links");
      this.bindEvents();
    }

    /**
     * Lie les événements pour le menu burger
     */
    private bindEvents(): void {
      this.o_burgerButton?.addEventListener("click", () => this.toggle());

      // Ferme le menu au clic sur un lien
      this.o_navLinks?.querySelectorAll("a").forEach((link) => {
        link.addEventListener("click", () => this.close());
      });

      // Ferme le menu au clic en dehors
      document.addEventListener("click", (e) => {
        if (
          this.isOpen &&
          !this.o_burgerButton?.contains(e.target as Node) &&
          !this.o_navLinks?.contains(e.target as Node)
        ) {
          this.close();
        }
      });
    }

    /**
     * Bascule l'état du menu burger
     */
    private toggle(): void {
      this.isOpen = !this.isOpen;
      this.updateUI();
    }

    /**
     * Ferme le menu burger
     */
    private close(): void {
      this.isOpen = false;
      this.updateUI();
    }

    /**
     * Met à jour l'interface selon l'état du menu
     */
    private updateUI(): void {
      this.o_burgerButton?.classList.toggle(
        "burger-toggle--active",
        this.isOpen,
      );
      this.o_navLinks?.classList.toggle("header__links--open", this.isOpen);
      this.o_burgerButton?.setAttribute(
        "aria-expanded",
        this.isOpen.toString(),
      );
    }
  }

  // Initialisation des gestionnaires
  new ThemeManager();
  new BurgerMenuManager();
</script>

<style>
  .header {
    position: fixed;
    top: 1.25rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1000;
    padding: 0.125rem;
  }

  .header__nav {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.375rem;
    background: rgba(255, 255, 255, 0.72);
    backdrop-filter: saturate(180%) blur(20px);
    -webkit-backdrop-filter: saturate(180%) blur(20px);
    border-radius: 980px;
    border: 1px solid rgba(0, 0, 0, 0.08);
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.05),
      0 2px 4px -2px rgba(0, 0, 0, 0.05);
  }

  .header__links {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .header__link {
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: #1d1d1f;
    text-decoration: none;
    border-radius: 980px;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    letter-spacing: -0.01em;
  }

  .header__link:hover {
    background: rgba(0, 0, 0, 0.06);
    color: #000;
  }

  .header__link:active {
    transform: scale(0.97);
  }

  .header__separator {
    width: 1px;
    height: 1.25rem;
    background: rgba(0, 0, 0, 0.1);
    margin: 0 0.25rem;
  }

  .theme-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.25rem;
    height: 2.25rem;
    padding: 0;
    background: transparent;
    border: none;
    border-radius: 50%;
    cursor: pointer;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    color: #1d1d1f;
  }

  .theme-toggle:hover {
    background: rgba(0, 0, 0, 0.06);
  }

  .theme-toggle:active {
    transform: scale(0.92);
  }

  .theme-toggle__icon {
    width: 1.125rem;
    height: 1.125rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .theme-toggle__icon--moon {
    display: none;
  }

  .theme-toggle__icon--sun {
    display: block;
  }

  /* Burger menu - caché par défaut sur desktop */
  .burger-toggle {
    display: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 2.25rem;
    height: 2.25rem;
    padding: 0;
    background: transparent;
    border: none;
    border-radius: 50%;
    cursor: pointer;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    gap: 0.3rem;
  }

  .burger-toggle:hover {
    background: rgba(0, 0, 0, 0.06);
  }

  .burger-toggle__line {
    width: 1.125rem;
    height: 2px;
    background: #1d1d1f;
    border-radius: 2px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Animation du burger en X */
  .burger-toggle--active .burger-toggle__line:nth-child(1) {
    transform: translateY(0.5rem) rotate(45deg);
  }

  .burger-toggle--active .burger-toggle__line:nth-child(2) {
    opacity: 0;
    transform: translateX(-100%);
  }

  .burger-toggle--active .burger-toggle__line:nth-child(3) {
    transform: translateY(-0.5rem) rotate(-45deg);
  }

  /* Thème sombre */
  :global([data-theme="dark"]) .header__nav {
    background: rgba(29, 29, 31, 0.72);
    border-color: rgba(255, 255, 255, 0.1);
  }

  :global([data-theme="dark"]) .header__link {
    color: #f5f5f7;
  }

  :global([data-theme="dark"]) .header__link:hover {
    background: rgba(255, 255, 255, 0.1);
    color: #fff;
  }

  :global([data-theme="dark"]) .header__separator {
    background: rgba(255, 255, 255, 0.15);
  }

  :global([data-theme="dark"]) .theme-toggle {
    color: #f5f5f7;
  }

  :global([data-theme="dark"]) .theme-toggle:hover {
    background: rgba(255, 255, 255, 0.1);
  }

  :global([data-theme="dark"]) .theme-toggle__icon--moon {
    display: block;
  }

  :global([data-theme="dark"]) .theme-toggle__icon--sun {
    display: none;
  }

  :global([data-theme="dark"]) .burger-toggle:hover {
    background: rgba(255, 255, 255, 0.1);
  }

  :global([data-theme="dark"]) .burger-toggle__line {
    background: #f5f5f7;
  }

  /* Responsive mobile */
  @media (max-width: 640px) {
    .header {
      top: 1rem;
      width: calc(100% - 2rem);
      max-width: fit-content;
    }

    .header__nav {
      position: relative;
      gap: 0.125rem;
      padding: 0.25rem;
    }

    /* Affiche le burger menu */
    .burger-toggle {
      display: flex;
    }

    /* Cache le séparateur sur mobile */
    .header__separator {
      display: none;
    }

    /* Menu déroulant mobile */
    .header__links {
      position: absolute;
      top: calc(100% + 0.5rem);
      left: 50%;
      transform: translateX(-50%) translateY(-0.5rem);
      min-width: max-content;
      width: auto;
      flex-direction: column;
      gap: 0;
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: saturate(180%) blur(20px);
      -webkit-backdrop-filter: saturate(180%) blur(20px);
      border-radius: 1rem;
      border: 1px solid rgba(0, 0, 0, 0.08);
      box-shadow:
        0 10px 15px -3px rgba(0, 0, 0, 0.1),
        0 4px 6px -4px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      opacity: 0;
      visibility: hidden;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .header__links--open {
      opacity: 1;
      visibility: visible;
      transform: translateX(-50%) translateY(0);
    }

    .header__link {
      width: 100%;
      padding: 1rem 1.5rem;
      font-size: 0.9375rem;
      border-radius: 0;
      text-align: left;
      white-space: nowrap;
    }

    .header__link:not(:last-child) {
      border-bottom: 1px solid rgba(0, 0, 0, 0.06);
    }

    .theme-toggle {
      width: 2rem;
      height: 2rem;
    }

    .theme-toggle__icon {
      width: 1rem;
      height: 1rem;
    }

    /* Thème sombre - mobile */
    :global([data-theme="dark"]) .header__links {
      background: rgba(29, 29, 31, 0.95);
      border-color: rgba(255, 255, 255, 0.1);
    }

    :global([data-theme="dark"]) .header__link:not(:last-child) {
      border-bottom-color: rgba(255, 255, 255, 0.1);
    }
  }
</style>
