---
import type { Project } from "../data/projects";

interface Props {
  l_projects: Project[];
}

const { l_projects } = Astro.props;

const l_categories = ["Tous", ...new Set(l_projects.map((p) => p.category))];
---

<section class="projects" id="projects">
  <div class="projects__container">
    <header class="projects__header">
      <span class="projects__eyebrow">Portfolio</span>
      <h2 class="projects__title">
        Des projets qui<br />
        <span class="projects__title--highlight">racontent une histoire.</span>
      </h2>
      <p class="projects__subtitle">
        Une sélection de projets sur lesquels j'ai travaillé, du concept à la
        mise en production.
      </p>
    </header>

    <div
      class="projects__filters"
      role="tablist"
      aria-label="Filtrer les projets"
    >
      {
        l_categories.map((category, index) => (
          <button
            type="button"
            role="tab"
            class={`projects__filter ${index === 0 ? "projects__filter--active" : ""}`}
            data-category={category}
            aria-selected={index === 0 ? "true" : "false"}
          >
            {category}
          </button>
        ))
      }
    </div>

    <div class="projects__grid">
      {
        l_projects.map((project) => (
          <article class="project-card" data-category={project.category}>
            <div class="project-card__image-wrapper">
              <img
                src={project.imageUrl}
                alt={`Aperçu du projet ${project.title}`}
                class="project-card__image"
                loading="lazy"
              />
              <div class="project-card__overlay">
                <div class="project-card__links">
                  {project.liveUrl && (
                    <a
                      href={project.liveUrl}
                      class="project-card__link"
                      target="_blank"
                      rel="noopener noreferrer"
                      aria-label={`Voir ${project.title} en ligne`}
                    >
                      <svg
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        aria-hidden="true"
                      >
                        <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                        <polyline points="15 3 21 3 21 9" />
                        <line x1="10" y1="14" x2="21" y2="3" />
                      </svg>
                    </a>
                  )}
                  {project.githubUrl && (
                    <a
                      href={project.githubUrl}
                      class="project-card__link"
                      target="_blank"
                      rel="noopener noreferrer"
                      aria-label={`Voir le code source de ${project.title}`}
                    >
                      <svg
                        viewBox="0 0 24 24"
                        fill="currentColor"
                        aria-hidden="true"
                      >
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                      </svg>
                    </a>
                  )}
                </div>
              </div>
            </div>
            <div class="project-card__content">
              <span class="project-card__category">{project.category}</span>
              <h3 class="project-card__title">{project.title}</h3>
              <p class="project-card__description">{project.description}</p>
              <div class="project-card__tags">
                {project.l_tags.map((tag) => (
                  <span class="project-card__tag">{tag}</span>
                ))}
              </div>
            </div>
          </article>
        ))
      }
    </div>

    <div class="projects__cta">
      <p class="projects__cta-text">Vous avez un projet en tête ?</p>
      <a href="#contact" class="btn btn--primary">
        Discutons-en
        <svg
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          aria-hidden="true"
        >
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </a>
    </div>
  </div>
</section>

<script>
  class ProjectFilter {
    private l_filterBtns: NodeListOf<HTMLButtonElement>;
    private l_projectCards: NodeListOf<HTMLElement>;

    constructor() {
      this.l_filterBtns = document.querySelectorAll(".projects__filter");
      this.l_projectCards = document.querySelectorAll(".project-card");
      this.init();
    }

    private init(): void {
      this.l_filterBtns.forEach((btn) => {
        btn.addEventListener("click", () => this.handleFilter(btn));
      });
    }

    private handleFilter(o_activeBtn: HTMLButtonElement): void {
      const category = o_activeBtn.dataset.category;

      this.l_filterBtns.forEach((btn) => {
        btn.classList.remove("projects__filter--active");
        btn.setAttribute("aria-selected", "false");
      });
      o_activeBtn.classList.add("projects__filter--active");
      o_activeBtn.setAttribute("aria-selected", "true");

      this.l_projectCards.forEach((card) => {
        const cardCategory = card.dataset.category;
        const shouldShow = category === "Tous" || cardCategory === category;

        if (shouldShow) {
          card.style.display = "";
          requestAnimationFrame(() => {
            card.style.opacity = "1";
            card.style.transform = "translateY(0)";
          });
        } else {
          card.style.opacity = "0";
          card.style.transform = "translateY(20px)";
          setTimeout(() => {
            card.style.display = "none";
          }, 300);
        }
      });
    }
  }

  document.addEventListener("DOMContentLoaded", () => {
    new ProjectFilter();
  });
</script>

<style>
