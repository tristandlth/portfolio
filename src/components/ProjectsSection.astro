  .project-card__title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1d1d1f;
    margin-bottom: 0.5rem;
    letter-spacing: -0.02em;
  }

  .project-card__description {
    font-size: 0.9375rem;
