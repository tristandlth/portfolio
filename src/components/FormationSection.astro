---
import { l_formations } from "../data/formation";
---

<section class="formation" id="formation">
  <div class="formation__container">
    <header class="formation__header">
      <span class="formation__eyebrow">Parcours</span>
      <h2 class="formation__title">
        Une formation<br />
        <span class="formation__title--highlight">en constante évolution.</span>
      </h2>
      <p class="formation__subtitle">
        Mon parcours académique et mes certifications professionnelles.
      </p>
    </header>

    <div class="formation__timeline">
      {
        l_formations.map((item, index) => (
          <article class="formation__item" data-index={index}>
            <div class="formation__item-marker">
              <span class="formation__item-dot" />
              {index < l_formations.length - 1 && (
                <span class="formation__item-line" aria-hidden="true" />
              )}
            </div>

            <div class="formation__item-content">
              <div class="formation__item-header">
                <span class="formation__item-date">{item.date}</span>
                {item.current && (
                  <span class="formation__item-badge">En cours</span>
                )}
              </div>

              <h3 class="formation__item-title">{item.title}</h3>
              <p class="formation__item-school">{item.school}</p>

              {item.description && (
                <p class="formation__item-description">{item.description}</p>
              )}

              {item.l_skills && item.l_skills.length > 0 && (
                <div class="formation__item-skills">
                  {item.l_skills.map((skill) => (
                    <span class="formation__item-skill">{skill}</span>
                  ))}
                </div>
              )}
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>

<style>
  .formation {
    padding: 8rem 2rem;
    background: transparent;
  }

  .formation__container {
    max-width: 900px;
    margin: 0 auto;
  }

  .formation__header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .formation__eyebrow {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #0071e3;
    margin-bottom: 1rem;
  }

  .formation__title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 700;
    letter-spacing: -0.03em;
    line-height: 1.15;
    color: #1d1d1f;
    margin-bottom: 1rem;
  }

  .formation__title--highlight {
    background: linear-gradient(135deg, #0071e3 0%, #5856d6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .formation__subtitle {
    font-size: 1.125rem;
    color: #6e6e73;
    max-width: 500px;
    margin: 0 auto;
  }

  .formation__timeline {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .formation__item {
    display: grid;
    grid-template-columns: 24px 1fr;
    gap: 1.5rem;
  }

  .formation__item-marker {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
  }

  .formation__item-dot {
    width: 12px;
    height: 12px;
    background: #0071e3;
    border-radius: 50%;
    position: relative;
    z-index: 2;
    flex-shrink: 0;
    margin-top: 0.5rem;
  }

  .formation__item-dot::before {
    content: "";
    position: absolute;
    inset: -4px;
    border: 2px solid rgba(0, 113, 227, 0.3);
    border-radius: 50%;
  }

  .formation__item-line {
    width: 2px;
    flex: 1;
    background: linear-gradient(
      180deg,
      #0071e3 0%,
      rgba(0, 113, 227, 0.1) 100%
    );
    margin-top: 0.5rem;
  }

  .formation__item-content {
    background: rgba(255, 255, 255, 0.72);
    backdrop-filter: saturate(180%) blur(20px);
    -webkit-backdrop-filter: saturate(180%) blur(20px);
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: 1.25rem;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
    transition: all 0.3s ease;
  }

  .formation__item-content:hover {
    transform: translateX(4px);
    box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.1);
  }

  .formation__item-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
  }

  .formation__item-date {
    font-size: 0.8125rem;
    font-weight: 600;
    color: #6e6e73;
    letter-spacing: 0.02em;
  }

  .formation__item-badge {
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #34c759;
    background: rgba(52, 199, 89, 0.1);
    padding: 0.25rem 0.625rem;
    border-radius: 980px;
  }

  .formation__item-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1d1d1f;
    margin-bottom: 0.25rem;
    letter-spacing: -0.02em;
  }

  .formation__item-school {
    font-size: 0.9375rem;
    font-weight: 500;
    color: #0071e3;
    margin-bottom: 0.75rem;
  }

  .formation__item-description {
    font-size: 0.9375rem;
    line-height: 1.6;
    color: #6e6e73;
    margin-bottom: 1rem;
  }

  .formation__item-skills {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .formation__item-skill {
    font-size: 0.75rem;
    font-weight: 500;
    color: #6e6e73;
    background: rgba(0, 0, 0, 0.04);
    padding: 0.375rem 0.75rem;
    border-radius: 980px;
  }

  :global([data-theme="dark"]) .formation {
    background: transparent;
  }
  
  :global([data-theme="dark"]) .formation__eyebrow {
    color: #2997ff;
  }

  :global([data-theme="dark"]) .formation__title {
    color: #f5f5f7;
  }

  :global([data-theme="dark"]) .formation__title--highlight {
    background: linear-gradient(135deg, #2997ff 0%, #8a8aff 100%);
    -webkit-background-clip: text;
    background-clip: text;
  }

  :global([data-theme="dark"]) .formation__subtitle {
    color: #a1a1a6;
  }

  :global([data-theme="dark"]) .formation__item-dot {
    background: #2997ff;
  }

  :global([data-theme="dark"]) .formation__item-dot::before {
    border-color: rgba(41, 151, 255, 0.3);
  }

  :global([data-theme="dark"]) .formation__item-line {
    background: linear-gradient(
      180deg,
      #2997ff 0%,
      rgba(41, 151, 255, 0.1) 100%
    );
  }

  :global([data-theme="dark"]) .formation__item-content {
    background: rgba(29, 29, 31, 0.72);
    border-color: rgba(255, 255, 255, 0.08);
  }

  :global([data-theme="dark"]) .formation__item-content:hover {
    box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.4);
  }

  :global([data-theme="dark"]) .formation__item-date {
    color: #a1a1a6;
  }

  :global([data-theme="dark"]) .formation__item-title {
    color: #f5f5f7;
  }

  :global([data-theme="dark"]) .formation__item-school {
    color: #2997ff;
  }

  :global([data-theme="dark"]) .formation__item-description {
    color: #a1a1a6;
  }

  :global([data-theme="dark"]) .formation__item-skill {
    color: #a1a1a6;
    background: rgba(255, 255, 255, 0.08);
  }

  @media (max-width: 640px) {
    .formation {
      padding: 6rem 1.5rem;
    }

    .formation__item {
      grid-template-columns: 16px 1fr;
      gap: 1rem;
    }

    .formation__item-dot {
      width: 10px;
      height: 10px;
    }

    .formation__item-dot::before {
      inset: -3px;
    }

    .formation__item-content {
      padding: 1.25rem;
    }

    .formation__item-title {
      font-size: 1.125rem;
    }
  }
</style>
