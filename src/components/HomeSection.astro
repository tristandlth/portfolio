---
import { profile } from "../data/profile";
---

<section class="home" id="home">
  <div class="home__content">
    <p class="home__greeting">Bonjour, je suis</p>
    <h1 class="home__name">{profile.name}</h1>
    <div class="home__role-wrapper">
      <span class="home__role" id="typed-text"></span>
      <span class="home__cursor" aria-hidden="true">|</span>
    </div>
    <p class="home__description">
      Je conçois et développe des applications web et mobile grâce à mes divers compétences.
    </p>
    <div class="home__cta">
      <a href="#projects" class="btn btn--primary">Voir mes projets</a>
      <a href="#contact" class="btn btn--secondary">Me contacter</a>
    </div>
  </div>
</section>

<script define:vars={{ l_roles: profile.l_roles }}>
  class TypeWriter {
    constructor(
      element,
      l_words,
      typingSpeed = 100,
      deletingSpeed = 50,
      pauseTime = 2000,
    ) {
      this.o_element = element;
      this.l_words = l_words;
      this.typingSpeed = typingSpeed;
      this.deletingSpeed = deletingSpeed;
      this.pauseTime = pauseTime;
      this.currentWordIndex = 0;
      this.currentCharIndex = 0;
      this.isDeleting = false;
    }

    type() {
      const currentWord = this.l_words[this.currentWordIndex];

      if (this.isDeleting) {
        this.currentCharIndex--;
        this.o_element.textContent = currentWord.substring(
          0,
          this.currentCharIndex,
        );
      } else {
        this.currentCharIndex++;
        this.o_element.textContent = currentWord.substring(
          0,
          this.currentCharIndex,
        );
      }

      let delay = this.isDeleting ? this.deletingSpeed : this.typingSpeed;

      if (!this.isDeleting && this.currentCharIndex === currentWord.length) {
        delay = this.pauseTime;
        this.isDeleting = true;
      } else if (this.isDeleting && this.currentCharIndex === 0) {
        this.isDeleting = false;
        this.currentWordIndex =
          (this.currentWordIndex + 1) % this.l_words.length;
        delay = 500;
      }

      setTimeout(() => this.type(), delay);
    }

    start() {
      this.type();
    }
  }

  document.addEventListener("DOMContentLoaded", () => {
    const o_typedElement = document.getElementById("typed-text");
    if (o_typedElement) {
      const o_typeWriter = new TypeWriter(
        o_typedElement,
        l_roles,
        80,
        40,
        2500,
      );
      o_typeWriter.start();
    }
  });
</script>

<style>
  .home {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    padding-top: 6rem;
  }

  .home__content {
    text-align: center;
    max-width: 800px;
  }

  .home__greeting {
    font-size: 1.125rem;
    font-weight: 500;
    color: #6e6e73;
    margin-bottom: 0.5rem;
    letter-spacing: 0.02em;
  }

  .home__name {
    font-size: clamp(2.5rem, 8vw, 5rem);
    font-weight: 700;
    letter-spacing: -0.03em;
    line-height: 1.1;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #1d1d1f 0%, #6e6e73 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .home__role-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 3rem;
    margin-bottom: 1.5rem;
  }

  .home__role {
    font-size: clamp(1.25rem, 4vw, 2rem);
    font-weight: 600;
    color: #0071e3;
    letter-spacing: -0.02em;
  }

  .home__cursor {
    font-size: clamp(1.25rem, 4vw, 2rem);
    font-weight: 300;
    color: #0071e3;
    animation: blink 1s infinite;
    margin-left: 2px;
  }

  @keyframes blink {
    0%,
    50% {
      opacity: 1;
    }
    51%,
    100% {
      opacity: 0;
    }
  }

  .home__description {
    font-size: 1.25rem;
    color: #6e6e73;
    max-width: 600px;
    margin: 0 auto 2.5rem;
    line-height: 1.6;
  }

  .home__cta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    padding: 0.875rem 1.75rem;
    font-size: 1rem;
    font-weight: 500;
    border-radius: 980px;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .btn--primary {
    background: #0071e3;
    color: #fff;
    border: none;
  }

  .btn--primary:hover {
    background: #0077ed;
    transform: scale(1.02);
  }

  .btn--secondary {
    background: transparent;
    color: #0071e3;
    border: 1px solid #0071e3;
  }

  .btn--secondary:hover {
    background: rgba(0, 113, 227, 0.08);
  }

  :global([data-theme="dark"]) .home__greeting {
    color: #a1a1a6;
  }

  :global([data-theme="dark"]) .home__name {
    background: linear-gradient(135deg, #f5f5f7 0%, #a1a1a6 100%);
    -webkit-background-clip: text;
    background-clip: text;
  }

  :global([data-theme="dark"]) .home__role,
  :global([data-theme="dark"]) .home__cursor {
    color: #2997ff;
  }

  :global([data-theme="dark"]) .home__description {
    color: #a1a1a6;
  }

  :global([data-theme="dark"]) .btn--primary {
    background: #2997ff;
  }

  :global([data-theme="dark"]) .btn--primary:hover {
    background: #40a9ff;
  }

  :global([data-theme="dark"]) .btn--secondary {
    color: #2997ff;
    border-color: #2997ff;
  }

  :global([data-theme="dark"]) .btn--secondary:hover {
    background: rgba(41, 151, 255, 0.1);
  }

  @media (max-width: 640px) {
    .home__description {
      font-size: 1.0625rem;
    }

    .btn {
      padding: 0.75rem 1.5rem;
      font-size: 0.9375rem;
    }
  }
</style>
