---
import { profile } from "../data/profile";
import { Icon } from "astro-icon/components";
---

<section class="about" id="about">
  <div class="about__container">
    <header class="about__header">
      <span class="about__eyebrow">À propos</span>
      <h2 class="about__title">
        Créer des expériences<br />
        <span class="about__title--highlight">qui font la différence.</span>
      </h2>
    </header>

    <div class="about__content">
      <div class="about__profile">
        <div class="about__photo-wrapper">
          <img
            src={profile.photoUrl}
            alt={`Photo de ${profile.name}`}
            class="about__photo"
            loading="lazy"
          />
          <div class="about__photo-ring" aria-hidden="true"></div>
        </div>

        <div class="about__card">
          <h3 class="about__card-name">{profile.name}</h3>
          <p class="about__card-title">{profile.title}</p>
          {
            profile.available && (
              <div class="about__card-status">
                <span class="about__status-dot" aria-hidden="true" />
                {profile.availableText}
              </div>
            )
          }
        </div>
      </div>

      <div class="about__details">
        <div class="about__stats">
          {
            profile.l_stats.map((stat) => (
              <div class="about__stat">
                <span class="about__stat-value">{stat.value}</span>
                <span class="about__stat-label">{stat.label}</span>
              </div>
            ))
          }
        </div>

        <div class="about__skills">
          <h3 class="about__skills-title">Technologies favorites</h3>
          <div class="about__skills-grid">
            {
              profile.l_skills.map((skill) => (
                <div class="about__skill">
                  <Icon
                    name={skill.icon}
                    class="about__skill-icon"
                    style={{ color: skill.color }}
                    aria-hidden="true"
                  />
                  <span class="about__skill-name">{skill.name}</span>
                </div>
              ))
            }
          </div>
        </div>

        <div class="about__cta">
          <a href={profile.cvUrl} class="btn btn--secondary" download>
            <svg
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              aria-hidden="true"
            >
              <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
              <polyline points="7 10 12 15 17 10"></polyline>
              <line x1="12" y1="15" x2="12" y2="3"></line>
            </svg>
            Télécharger mon CV
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .about {
    min-height: 100vh;
    padding: 8rem 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .about__container {
    max-width: 1100px;
    width: 100%;
  }

  .about__header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .about__eyebrow {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #0071e3;
    margin-bottom: 1rem;
  }

  .about__title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 700;
    letter-spacing: -0.03em;
    line-height: 1.15;
    color: #1d1d1f;
  }

  .about__title--highlight {
    background: linear-gradient(135deg, #0071e3 0%, #5856d6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .about__content {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 4rem;
    align-items: start;
  }

  .about__profile {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    position: sticky;
    top: 6rem;
  }

  .about__photo-wrapper {
    position: relative;
    width: 220px;
    height: 220px;
  }

  .about__photo {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
    position: relative;
    z-index: 2;
  }

  .about__photo-ring {
    position: absolute;
    inset: -8px;
    border-radius: 50%;
    background: linear-gradient(135deg, #0071e3 0%, #5856d6 50%, #bf5af2 100%);
    z-index: 1;
    animation: rotate 8s linear infinite;
  }

  @keyframes rotate {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .about__card {
    background: rgba(255, 255, 255, 0.72);
    backdrop-filter: saturate(180%) blur(20px);
    -webkit-backdrop-filter: saturate(180%) blur(20px);
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: 1.25rem;
    padding: 1.5rem;
    text-align: center;
    width: 100%;
    max-width: 260px;
  }

  .about__card-name {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1d1d1f;
    margin-bottom: 0.25rem;
  }

  .about__card-title {
    font-size: 0.9375rem;
    color: #6e6e73;
    margin-bottom: 1rem;
  }

  .about__card-status {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.8125rem;
    font-weight: 500;
    color: #34c759;
    background: rgba(52, 199, 89, 0.1);
    padding: 0.5rem 1rem;
    border-radius: 980px;
  }

  .about__status-dot {
    width: 8px;
    height: 8px;
    background: #34c759;
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.6;
      transform: scale(0.9);
    }
  }

  .about__details {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  .about__bio {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .about__bio p {
    font-size: 1.125rem;
    line-height: 1.7;
    color: #1d1d1f;
  }

  .about__stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
  }

  .about__stat {
    background: rgba(0, 0, 0, 0.03);
    border-radius: 1rem;
    padding: 1.25rem;
    text-align: center;
  }

  .about__stat-value {
    display: block;
    font-size: 2rem;
    font-weight: 700;
    letter-spacing: -0.03em;
    color: #1d1d1f;
    margin-bottom: 0.25rem;
  }

  .about__stat-label {
    font-size: 0.8125rem;
    color: #6e6e73;
  }

  .about__skills-title {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #6e6e73;
    margin-bottom: 1rem;
  }

  .about__skills-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .about__skill {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(255, 255, 255, 0.72);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: 980px;
    padding: 0.625rem 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: #1d1d1f;
    transition: all 0.2s ease;
  }

  .about__skill:hover {
    background: rgba(0, 113, 227, 0.08);
    border-color: rgba(0, 113, 227, 0.2);
    transform: translateY(-2px);
  }

  .about__skill-icon {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }

  .about__cta {
    padding-top: 0.5rem;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    font-size: 0.9375rem;
    font-weight: 500;
    border-radius: 980px;
    text-decoration: none;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .btn svg {
    width: 1.125rem;
    height: 1.125rem;
  }

  .btn--secondary {
    background: transparent;
    color: #0071e3;
    border: 1px solid #0071e3;
  }

  .btn--secondary:hover {
    background: rgba(0, 113, 227, 0.08);
  }

  .btn--secondary:active {
    transform: scale(0.97);
  }

  :global([data-theme="dark"]) .about__title {
    color: #f5f5f7;
  }

  :global([data-theme="dark"]) .about__title--highlight {
    background: linear-gradient(135deg, #2997ff 0%, #8a8aff 100%);
    -webkit-background-clip: text;
    background-clip: text;
  }

  :global([data-theme="dark"]) .about__eyebrow {
    color: #2997ff;
  }

  :global([data-theme="dark"]) .about__card {
    background: rgba(29, 29, 31, 0.72);
    border-color: rgba(255, 255, 255, 0.1);
  }

  :global([data-theme="dark"]) .about__card-name {
    color: #f5f5f7;
  }

  :global([data-theme="dark"]) .about__card-title {
    color: #a1a1a6;
  }

  :global([data-theme="dark"]) .about__bio p {
    color: #f5f5f7;
  }

  :global([data-theme="dark"]) .about__stat {
    background: rgba(255, 255, 255, 0.05);
  }

  :global([data-theme="dark"]) .about__stat-value {
    color: #f5f5f7;
  }

  :global([data-theme="dark"]) .about__stat-label {
    color: #a1a1a6;
  }

  :global([data-theme="dark"]) .about__skills-title {
    color: #a1a1a6;
  }

  :global([data-theme="dark"]) .about__skill {
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 255, 255, 0.1);
    color: #f5f5f7;
  }

  :global([data-theme="dark"]) .about__skill:hover {
    background: rgba(41, 151, 255, 0.15);
    border-color: rgba(41, 151, 255, 0.3);
  }

  :global([data-theme="dark"]) .btn--secondary {
    color: #2997ff;
    border-color: #2997ff;
  }

  :global([data-theme="dark"]) .btn--secondary:hover {
    background: rgba(41, 151, 255, 0.1);
  }

  @media (max-width: 900px) {
    .about__content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .about__profile {
      position: static;
    }

    .about__photo-wrapper {
      width: 180px;
      height: 180px;
    }
  }

  @media (max-width: 640px) {
    .about {
      padding: 6rem 1.5rem;
    }

    .about__header {
      margin-bottom: 3rem;
    }

    .about__stats {
      grid-template-columns: 1fr;
      gap: 0.75rem;
    }

    .about__stat {
      display: flex;
      align-items: center;
      justify-content: space-between;
      text-align: left;
      padding: 1rem 1.25rem;
    }

    .about__stat-value {
      font-size: 1.5rem;
      margin-bottom: 0;
    }

    .about__bio p {
      font-size: 1rem;
    }
  }
</style>
